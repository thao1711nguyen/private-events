<%= form_with model: event do |f| %>
    <div>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title%>
        <% event.errors.full_messages_for(:title).each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>
    <div>
        <%= f.label :date %>
        <br>
        <%= f.date_field :date%>
        <% event.errors.full_messages_for(:date).each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>
    <div>
        <%= f.label :location %>
        <br>
        <%= f.text_field :location%>
        <% event.errors.full_messages_for(:location).each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>